        gtag('config', 'G-9WMYL5KKJK');
    </script>
    
    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="google4025503f90d6f6c9" />
    
    <!-- SEO Meta Tags -->
    <title>Lottery Number Filter - Smart Lottery Number Generator and Analysis Tool</title>
    <meta name="description" content="Free lottery number filter and analysis tool. Generate winning combinations, filter by odd/even numbers, sum ranges, and more. Improve your lottery strategy today!">
    <meta name="keywords" content="lottery filter, lottery number generator, lottery strategy, lottery combinations, lottery analysis, winning numbers, lottery tool">
    
    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content="Lottery Number Filter - Smart Number Generator">
    <meta property="og:description" content="Generate and analyze lottery numbers with our advanced filtering tools. Improve your chances with smart number selection.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://lottery-filters.onrender.com">
    
    <!-- Additional SEO Tags -->
    <meta name="robots" content="index, follow">
    <meta name="author" content="Lottery Filter Tool">
    <link rel="canonical" href="https://lottery-filters.onrender.com">
    
    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9929169257372776"
     crossorigin="anonymous"></script>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    
    <!-- Schema.org markup for Google -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "Lottery Number Filter",
      "description": "Advanced lottery number filtering and analysis tool to help generate smart number combinations",
      "url": "https://lottery-filters.onrender.com",
      "applicationCategory": "UtilityApplication",
      "features": [
        "Odd/Even number filtering",
        "Sum range analysis",
        "Distance filtering",
        "Random combination generation",
        "Must include numbers"
      ],
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
    </script>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Lottery Number Filter</h1>
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="drawSize" class="form-label">Numbers to Draw:</label>
                    <input type="number" class="form-control" id="drawSize" min="1">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="totalNumbers" class="form-label">Total Numbers in Game:</label>
                    <input type="number" class="form-control" id="totalNumbers" min="1">
                </div>
            </div>
        </div>

        <div class="text-center mb-4">
            <button class="btn btn-primary" onclick="generateInitialCombinations()">Generate Initial Combinations</button>
            <p class="mt-2">Initial combinations: <span id="initialCount">0</span></p>
            <div id="initialResults" class="results-container"></div>
        </div>

        <div class="accordion mt-4" id="filterAccordion">
            <!-- Odd Numbers Filter -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#oddFilter">
                        Odd Numbers Filter
                    </button>
                </h2>
                <div id="oddFilter" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Number of Odd Numbers (min-max):</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="oddRange" placeholder="e.g., 2-4">
                                <button class="btn btn-primary" onclick="applyFilter('odd')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('oddRange')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('oddRange')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Combinations after odd filter: <span id="oddCount">0</span></p>
                            <div id="oddResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Distance Range Filter -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#distanceFilter">
                        Distance Range Filter
                    </button>
                </h2>
                <div id="distanceFilter" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Distance Range (min-max):</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="distanceRange" placeholder="e.g., 20-30">
                                <button class="btn btn-primary" onclick="applyFilter('distance')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('distanceRange')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('distanceRange')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Combinations after distance filter: <span id="distanceCount">0</span></p>
                            <div id="distanceResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Number Difference Filter -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#diffFilter">
                        Number Difference Filter
                    </button>
                </h2>
                <div id="diffFilter" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Difference Range (min-max):</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="diffRange" placeholder="e.g., 5-15">
                                <button class="btn btn-primary" onclick="applyFilter('diff')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('diffRange')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('diffRange')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Combinations after difference filter: <span id="diffCount">0</span></p>
                            <div id="diffResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sum Range Filter -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sumFilter">
                        Sum Range Filter
                    </button>
                </h2>
                <div id="sumFilter" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Sum Range (min-max):</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="sumRange" placeholder="e.g., 120-180">
                                <button class="btn btn-primary" onclick="applyFilter('sum')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('sumRange')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('sumRange')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Combinations after sum filter: <span id="sumCount">0</span></p>
                            <div id="sumResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Must Include Filter -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#includeFilter">
                        Must Include Numbers
                    </button>
                </h2>
                <div id="includeFilter" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Numbers to Include (comma-separated):</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="mustInclude" placeholder="e.g., 1,2,3">
                                <button class="btn btn-primary" onclick="applyFilter('include')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('mustInclude')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('mustInclude')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Combinations after include filter: <span id="includeCount">0</span></p>
                            <div id="includeResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Random Selection -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#randomFilter">
                        Random Selection
                    </button>
                </h2>
                <div id="randomFilter" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label">Number of Random Combinations:</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="randomCount" min="1">
                                <button class="btn btn-primary" onclick="applyFilter('random')">Run Filter</button>
                            </div>
                            <div class="btn-group mt-2">
                                <button class="btn btn-secondary" onclick="skipFilter('randomCount')">Skip</button>
                                <button class="btn btn-warning" onclick="clearFilter('randomCount')">Clear</button>
                            </div>
                        </div>
                        <div class="filter-results">
                            <p>Final combinations: <span id="randomCount">0</span></p>
                            <div id="randomResults" class="results-container"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-success" onclick="exportToCSV()">Export to CSV</button>
        </div>
        
        <!-- Footer -->
        <footer class="mt-5 pb-3 text-center">
            <hr>
            <p>
                <a href="/privacy">Privacy Policy</a> | 
                Â© 2025 Lottery Number Filter
            </p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='analytics.js') }}"></script>
    <script src="{{ url_for('static', filename='script.js') }}"></script>
</body>
</html>
